{
  "manifest_version": 2,
  "name": "Noffort: Integrate Clockify and Kanbanize.",
  "description": "An extension to integrate Clockify and Kanbanize.",
  "version": "1.0.0",
  "icons": {
    "16": "images/noffort_16.png",
    "48": "images/noffort_48.png",
    "128": "images/noffort_128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.kanbanize.com/*"],
      "js": ["scripts/kb_noffort.js"]
    }
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://api.clockify.me/api/v1/*"
  ],
  "browser_action": {
    "default_popup": "view/popup.html",
    "default_icon": {
      "16": "images/noffort_16.png",
      "48": "images/noffort_48.png",
      "128": "images/noffort_128.png"
    }
  }
}